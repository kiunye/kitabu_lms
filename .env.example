# Database
DATABASE_URL=postgresql://kitabu:kitabu_secret@localhost:5432/kitabu_lms_dev
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL_PROD=postgresql://kitabu:${DB_PASSWORD}@db.kitabu.com:5432/kitabu_lms_prod

# PostgreSQL Connection Pool
POOL_SIZE=20
POOL_OVERFLOW=5
IDLE_INTERVAL=1000
OWNERSHIP_TIMEOUT=30000
DB_SSL=false

# Redis
REDIS_URL=redis://localhost:6379
REDIS_URL_PROD=redis://:${REDIS_PASSWORD}@redis.kitabu.com:6379

# Phoenix
SECRET_KEY_BASE=your_secret_key_base_at_least_64_characters_here
PHX_HOST=localhost

# Payment - Paystack (Kenya & Rwanda)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=whsec_your_webhook_secret

# Payment - Stripe (optional backup)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email - Bamboo/Swoosh
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USERNAME=postmaster@yourdomain.mailgun.org
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_ADDRESS=no-reply@kitabu.com

# AWS S3 for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_BUCKET_NAME=kitabu-uploads

# Mobile App
FIREBASE_PROJECT_ID=kitabu-lms
FIREBASE_API_KEY=your_firebase_api_key

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
ENABLE_MOBILE_APP=true
ENABLE_DARK_MODE=true

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
